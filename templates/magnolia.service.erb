#! /bin/sh
### BEGIN INIT INFO
# Provides: magnolia
# Required-Start: $remote_fs $syslog
# Required-Stop: $remote_fs $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Magnolia
# Description: This file starts and stops Magnolia server
# 
### END INIT INFO

case "$1" in
 start)
   <%= @tomcat_service_dir %>/magnolia_control.sh start
   ;;
 stop)
   <%= @tomcat_service_dir %>/magnolia_control.sh stop
   sleep 10
   ;;
 restart)
   <%= @tomcat_service_dir %>/magnolia_control.sh stop
   sleep 20
   <%= @tomcat_service_dir %>/magnolia_control.sh start
   ;;
 *)
   echo "Usage: magnolia {start|stop|restart}" >&2
   exit 3
   ;;
esac